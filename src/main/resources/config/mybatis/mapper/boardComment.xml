<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="comment">

	<select parameterType="int" resultType="boardComment" id="selectList">
	select * from board_comment where board_idx=#{board_idx} order by seq asc 
	</select>

	<!-- 댓글 수정하기 -->
	<update parameterType="boardComment" id="update">
	update board_comment 
	set content=#{content}, updated_at=current_timestamp() where idx=#{idx} 
	</update>
	
	<!-- 원글에 댓글 달기 -->
	<insert parameterType="boardComment" id="insert">
	insert into board_comment (board_idx,user_idx,content) values(#{idx},#{user_idx},#{content}) 
	</insert>

</mapper>












